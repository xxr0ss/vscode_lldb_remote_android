{
    "configurations": [
        {
            "name": "Remote launch",
            "type": "lldb",
            "request": "attach",
            "pid": "${input:pid}",
            "initCommands": [
                "platform select remote-android",
                "platform connect unix-abstract-connect:///data/local/tmp/debug.sock",
                "settings set target.inherit-env false",
            ],
        }
    ],
    "inputs": [
        {
            "id": "pid",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "adb shell pidof re.xx.androidbud"
            }
        }
    ]
}